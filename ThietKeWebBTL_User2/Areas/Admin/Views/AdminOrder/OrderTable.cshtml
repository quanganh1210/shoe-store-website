@model IEnumerable<ThietKeWebBTL_User2.Models.TbOrder>

@{
	ViewData["Title"] = "OrderTable";
}

<div class="col-lg-12 stretch-card">
	<div class="card">
		<div class="card-body">
			<h1>Order</h1>

			@*<button type="button" class="btn btn-success btn-sm addNew">Add product</button>*@
			<table class="table table-bordered" id="tableProduct">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.OrderDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.TotalPrice)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Status)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DeliveryDate)
						</th>
						
						<th>
							@Html.DisplayNameFor(model => model.Address)
						</th>
						
						<th>
							@Html.DisplayNameFor(model => model.EmailNavigation)
						</th>
						
						
						<th></th>
					</tr>
				</thead>
				<tbody>
					@{
						int i = 0;
					}
					@foreach (var item in Model)
					{
						i++;
						string className = "";
						if (i == 1)
							className = "table-info";
						else if (i == 2)
							className = "table-warning";
						else if (i == 3)
							className = "table-danger";
						else if (i == 4)
							className = "table-success";
						else
						{
							className = "table-primary";
							i -= 5;
						}



						<tr class="@className">
							<td>
								@Html.DisplayFor(modelItem => item.OrderDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TotalPrice)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DeliveryDate)
							</td>
							
							<td>
								@Html.DisplayFor(modelItem => item.Address)
							</td>
							
							<td>
								@Html.DisplayFor(modelItem => item.Email)
							</td>
							
							

							<td>
								<a asp-controller="AdminOrder" asp-action="EditOrder" asp-route-orderID="@item.OrderId" type="button" class="btn btn-primary btn-sm">Edit</a>
								<a asp-controller="AdminOrder" asp-action="OrderDetailTable" asp-route-orderID="@item.OrderId" type="button" class="btn btn-info btn-sm">Detail</a>
								@*<a asp-controller="AdminProduct" asp-action="DeleteProduct" asp-route-productID="@item.ProductId" type="button" class="btn btn-danger btn-sm">Delete</a>*@
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


