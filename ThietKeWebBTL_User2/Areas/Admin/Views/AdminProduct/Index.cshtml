@model IEnumerable<ThietKeWebBTL_User2.Models.Product>

@{
	ViewData["Title"] = "Index";
}



<div class="col-lg-12 stretch-card">
	<div class="card">
		<div class="card-body">
			<h1>Product</h1>
			
			<a asp-controller="AdminProduct" asp-action="AddProduct" type="button" class="btn btn-outline-success btn-icon-text btn-sm addNew">
				<i class="mdi mdi-upload btn-icon-prepend"></i> Add product
			</a>
			@*<button type="button" class="btn btn-success btn-sm addNew">Add product</button>*@
			<table class="table table-bordered" id="tableProduct">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Name)
						</th>

						<th>
							@Html.DisplayNameFor(model => model.ReleaseDate)
						</th>

						<th>
							@Html.DisplayNameFor(model => model.CreatedDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Status)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CreatedBy)
						</th>

						<th></th>
					</tr>
				</thead>
				<tbody>
					@{
						int i = 0;
					}
					@foreach (var item in Model)
					{
						i++;
						string className = "";
						if (i == 1)
							className = "table-info";
						else if (i == 2)
							className = "table-warning";
						else if (i == 3)
							className = "table-danger";
						else if (i == 4)
							className = "table-success";
						else
						{
							className = "table-primary";
							i -= 5;
						}



						<tr class="@className">
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.ReleaseDate)
							</td>

							<td>
								@Html.DisplayFor(modelItem => item.CreatedDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.CreatedBy)
							</td>

							<td>
								<a asp-controller="AdminProduct" asp-action="EditProduct" asp-route-productID="@item.ProductId" type="button" class="btn btn-primary btn-sm">Edit</a>
								@*<a asp-controller="AdminProduct" asp-action="ProductDetail" asp-route-productID="@item.ProductId" type="button" class="btn btn-info btn-sm">Detail</a>*@
								<a asp-controller="AdminProduct" asp-action="DeleteProduct" asp-route-productID="@item.ProductId" type="button" class="btn btn-danger btn-sm">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
